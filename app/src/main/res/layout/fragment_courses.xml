<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/blue"
    tools:context=".fragments.CoursesFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="52dp">

                <LinearLayout
                    android:id="@+id/ll_Android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewAndroid"
                        android:layout_width="200dp"
                        android:layout_height="170dp"
                        android:src="@drawable/android_course"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/androidTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_below="@+id/imageViewAndroid"
                        android:text="Android Development"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_below="@+id/ll_Android"
                    android:layout_marginTop="36dp">

                    <ImageView
                        android:id="@+id/imageViewWeb"
                        android:layout_width="200dp"
                        android:layout_height="170dp"
                        android:src="@drawable/web_development"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/webTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_below="@+id/imageViewWeb"
                        android:text="Web Development"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_below="@+id/ll_Web"
                    android:layout_marginTop="36dp">

                    <ImageView
                        android:id="@+id/imageViewDsa"
                        android:layout_width="200dp"
                        android:layout_height="170dp"
                        android:src="@drawable/dsa2"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/dsaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_below="@+id/imageViewWeb"
                        android:text="Data Structures and Algorithm"
                        android:textSize="18sp" />


                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>


</FrameLayout>